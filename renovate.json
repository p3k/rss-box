{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:base",
    "npm:unpublishSafe",
    ":automergeMinor",
    ":pinVersions",
    ":semanticCommitsDisabled"
  ],

  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "labels": ["urgent"],
    "automerge": true
  },

  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },

  "labels": ["dependency"]
}
